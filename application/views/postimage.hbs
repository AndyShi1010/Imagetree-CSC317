<div class="flex-center-column">
  <header>
      <h1>Post an Image</h1>
  </header>
  <form class="main-container-card">
    <div class="input-container">
      <label class="input-file" for="post-file">
        <p class="input-file-labeltext">Upload File</p>
        <input class="filebox" type="file" id="post-file" accept="image/*" onchange="displayFileName(this, event);" required>
        <span class="rendered-filebox">Select File</span>
      </label>
    </div>
    <div class="input-container">
      <label for="post-title">Post Title</label>
      <input class="input-field" type="text" id="post-title" required>
    </div>
    <div class="input-container">
      <label for="post-desciption">Post Description</label>
      <textarea class="input-field" id="post-desciption"></textarea>
    </div>
    <div class="input-container">
      <label class="input-check" for="check-policy">
        <input class="checkbox" type="checkbox" id="check-policy" required>
        <span class="rendered-checkbox"></span>
        <p>
          Have you accepted our <a href="#">Acceptable Use Policy</a>?
        </p>
      </label>
    </div>
    <button class="main-action-button" id="submit-button" type="submit">Post</button>
  </form>
  {{> min-footer}}
</div>


<div class="content-container">
  <div class="post-content">
    <div class="image-container">
      <img class="post-image" src="/{{currentPost.photopath}}" alt="Post Image">
    </div>
    <div class="comments">
      <h1>Comments</h1>
      <div class="add-comment" id="add-comment">
        <h3>Add a comment</h1>
        <div class="add-comment-input">
            {{!-- <span class="input-field" id="comment-field" role="textbox" contenteditable></span> --}}
            <textarea name="comment" class="input-field" id="comment-field" oninput="updateCommentSubmit(this.value);" required></textarea>
            <button class="icon-submit-button" id="send-comment-button" onclick="postComment(this)" disabled><span class="material-icons-round">send</span></button>
        </div>
      </div>
      {{!-- {{log this}} --}}
      <div id="comments-container">
        {{#each currentPost.comments}}
        {{> commentcard this}}
        {{/each}}
      </div>

    </div>
  </div>

  <div class="right-column">
    <h2 class="post-title">{{currentPost.title}}</h2>
    <p class="post-author">by {{currentPost.username}}</p>
    <p class="post-timestamp">{{currentPost.created}}</p>
    <p class="post-description">{{currentPost.description}}</p>
    <a href="/{{currentPost.photopath}}" class="primary-action-button action-button-left-aligned" id="download" download><span class="material-icons-round">save_alt</span>Download</a>
  </div>
</div>

